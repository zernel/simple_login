%h3= t('site.sign_in', default: "Login")
= form_tag sessions_path, class: "form" do
  .control-group
    = label_tag :email, nil, class: "control-label"
    .controls
      = text_field_tag :email, params[:email], class: "input-xlarge"
  .control-group
    = label_tag :password, nil, class: "control-label"
    .controls
      = password_field_tag :password, nil, class: "input-xlarge"
  .control-group
    = label_tag :remember_me, nil, class: "control-label"
    = check_box_tag :remember_me, 1, params[:remember_me]
  .actions
    = submit_tag t("user.log_in", default: "Log in"), class: "btn btn-large btn-primary"

= link_to t("user.forgotten_password", default: "Forgotten password?"), new_password_reset_path
= link_to t("user.sign_up", default: "Sign Up"), new_user_path
